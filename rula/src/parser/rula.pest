// Everything starts here
rula = {SOI ~ ("\n")* ~ program? ~ ("\n")* ~ EOI}

// Program 
program = { stmt }

stmt = {expr}

expr = {("\n")* ~(import_expr| if_expr | let_expr | ident | term) ~ ("\n")*}

import_expr = {"import" ~ ident ~ ("::" ~ ident)* ~ ("::" ~ "{" ~ ident_list ~ "}")? ~!"::"}

if_expr = {"if" ~ "(" ~ expr ~ ")" ~"{" ~ expr ~ "}" ~ (else_if_expr)* ~ else_expr?}
else_if_expr = {"else" ~ "if" ~ "(" ~ expr ~ ")" ~ "{" ~ expr ~ "}"}
else_expr = {"else" ~ "{" ~ expr ~ "}"}

let_expr = {"let" ~ ident ~ "=" ~ number}

term = {number ~ (op ~ number)*}

op = {"*" | "/" | "+" | "-"}

number = {ASCII_DIGIT+}
ident = {ASCII_ALPHA ~ (ASCII_ALPHA | ASCII_DIGIT | "_")*}
ident_list = { ident ~ ("," ~ ident)* }

WHITESPACE = _{" "}
COMMENT = _{("/*" ~ (!"*/" ~ ANY)* ~ "*/" | "//" ~ (!"\n" ~ ANY)* ~ "\n")}